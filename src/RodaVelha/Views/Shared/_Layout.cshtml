<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RodaVelha</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
            box-sizing: border-box;
        }

        @font-face {
            font-family: Graphik;
            src: url(src\RodaVelha\Views\Perfil\Graphik-Font-Family);
        }

        body {
            background-color: #ede1d2;
        }

        /*menu*/

        .logo {
            display: flex;
            align-items: center;
            float: left;

        }

        .logo img {
            height: 110px;
            margin-top: 5px;
        }

        .logo img:hover {
            scale: 1.1;
        }

        header {
            width: 100%;
            height: 80px;
            background-color: #412f26;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 100px;
        }

        .hamburger {
            display: none;
        }

        .nav-bar ul {
            display: flex;
        }

        .nav-bar ul li a {
            display: block;
            color: white;
            font-size: 16px;
            font-weight: 500;
            padding: 10px 25px;
            border-radius: 50px;
            transition: 0.2s;
            margin: 0 5px;
            font-family: Graphik;
        }

        .nav-bar ul li a:hover {
            color: #fefefe;
            background-color: #6a6f4c;
            scale: 1.1;
        }

        .nav-bar ul li a.active {
            color: #fefefe;
            background-color: #6a6f4c;
        }

        /*end-menu*/


        /*footer*/

        footer {
            background-color: #412f26;
        }

        footer .container {
            display: flex;
            color: white;
        }

        #ul-1 {
            padding: 30px 40px 10px 80px;
        }

        #ul-2 {
            padding: 30px 40px 10px 80px;
        }

        #ul-3 {
            padding: 30px 40px 10px 80px;
        }

        #ul-4 {
            padding: 30px 40px 10px 80px;
        }

        footer .container ul {
            width: 25%;
        }

        footer .container h3 {
            margin-bottom: 16px;
            font-family: Graphik;
            font-size: 17px;
        }

        footer .container .redes-sociais img {
            margin-right: 10px;
            width: 25px;
            cursor: pointer;
        }

        footer .container .redes-sociais img:hover {
            scale: 1.3;
        }

        footer .container ul>p {
            margin-bottom: 40px;
        }

        footer .container li {
            margin: 10px 0;
        }

        footer .container a {
            color: white;
            padding: 5px 10px;
        }

        .links {
            margin-left: 10px;
        }

        .suporte {
            margin-left: 10px;
        }

        footer .container a:hover {
            background-color: #6a6f4c;
            border-radius: 5px;

        }

        /*end footer*/


        /*responsivo*/
        @mediaonlyscreenand (max-width: 1320px) {
            header {
                padding: 0 50px;
            }
        }

        @mediaonlyscreenand (max-width: 1100px) {
            header {
                padding: 0 30px;
            }
        }

        @mediaonlyscreenand (max-width: 900px) {
            .hamburger {
                display: block;
                cursor: pointer;
            }

            .hamburger .line {
                width: 30px;
                height: 3px;
                background: #fefefe;
                margin: 6px 0;
            }

            .nav-bar {
                height: 0px;
                position: absolute;
                top: 80px;
                left: 0;
                right: 0;
                width: 100vh;
                background: #412f26;
                transition: 0.2s;
                overflow: hidden;
            }

            .nav-bar.active {
                height: 450px;
            }

            .nav-bar ul {
                display: block;
                width: fit-content;
                margin: 80px auto 0 auto;
                text-align: center;
                transition: 0.5s;
                opacity: 0;
            }

            .nav-bar.active ul {
                opacity: 1;
            }

            .nav-bar ul li a {
                margin-bottom: 12px;
            }

            footer .container {
                flex-direction: column;
            }

            footer .container ul {
                width: 100%;
                margin-bottom: 30px;
            }
        }

        /*end-resposivo*/
    </style>
</head>

<body>
    <!--HEADER-->

    <header>
        <div class="logo">
            <a href="index.html"><img src="src\RodaVelha\Views\Perfil\imagens\logo.png" alt="logo-rodavelha" /></a>
        </div>
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>

        <nav class="nav-bar">
            <ul>
                <li>
                    <a href="" class="active">INÍCIO</a>
                </li>

                <li>
                    <a href="">PERFIL</a>
                </li>

                <li>
                    <a href="">ENTRAR</a>
                </li>
            </ul>
        </nav>
    </header>

    <!--end-HEADER-->


    <!--MAIN-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--end-MAIN-->


    <!--FOOTER-->
    <footer>
        <div class="container">
            <!--ul 1-->
            <ul id="ul-1">
                <h3>RODA VELHA</h3>
                <p>
                    Reviva a elegância do passado com o Roda Velha: o destino definitivo
                    para entusiastas de carros clássicos.
                </p>
                <div class="redes-sociais">
                    <img src="src\RodaVelha\Views\Perfil\imagens\wfb.png" alt="Facebook" />
                    <img src="src\RodaVelha\Views\Perfil\imagens\wx.png" alt="X" />
                    <img src="src\RodaVelha\Views\Perfil\imagens\wwpp.png" alt="Whatsapp" />
                    <img src="src\RodaVelha\Views\Perfil\imagens\winsta.png" alt="Instagram" />
                </div>
            </ul>
            <!--end ul 1-->

            <!--ul 2-->
            <ul id="ul-2">
                <h3 class="links" id="links">LINKS</h3>
                <li><a href="#">Início</a></li>
                <li><a href="#">Perfil</a></li>
                <li><a href="#">Login</a></li>
                <li><a href="#">Cadastro</a></li>
            </ul>
            <!--end ul 2-->

            <!--ul 3-->
            <ul id="ul-3">
                <h3 class="suporte" id="suporte">SUPORTE</h3>
                <li><a href="#">FAQ</a></li>
                <li><a href="#">Como Funciona</a></li>
                <li><a href="#">Contato</a></li>
            </ul>
            <!--end ul 3-->

            <!--ul 4-->
            <ul id="ul-4">
                <h3>FALE CONOSCO</h3>
                <li>
                    <p>+55 310000-0000</p>
                </li>
                <li>
                    <p>suporterodavelha@gmail.com</p>
                </li>
                <li>
                    <p>Brasil</p>
                </li>
            </ul>
            <!--end ul 4-->
        </div>
    </footer>
    <!--end-FOOTER-->

    <!--SCRIPT-->
    <script>
        hamburger = document.querySelector(".hamburger");
        hamburger.onclick = function () {
            navBar = document.querySelector(".nav-bar");
            navBar.classList.toggle("active");
        }   
    </script>

    <!--end-SCRIPT-->

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
