@model RodaVelha.ViewModels.UserPageViewModel

@{
    ViewData["Title"] = "Perfil";
}


    <h1>Perfil</h1>

    <p><a asp-action="Create">Criar novo usuário</a></p>
    <p><a asp-action="Details" asp-route-id="1">Detalhes do usuário</a></p>


    <section class="card-section text-center" >
        <div class="card" style="width:18rem">
            <img src="https://as1.ftcdn.net/v2/jpg/01/21/93/74/1000_F_121937450_E3o8jRG3mKbMaAFprSuNOlyrLraSVVua.jpg" class="card-img-top" alt="Imagem do perfil do usuário" style="width: 150px;"/>
            <div class="card-body">
                @if (Model.userData != null){
                <h5 class="card-title">Nome: @Model.userData.Name</h5>
                <h5 class="card-title">E-mail: @Model.userData.Email</h5>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="1">EDITAR PERFIL</a>
                }
                else
                {
                    <h5 class="card-title">Nome: [ Não Logado ]</h5>
                    <h5 class="card-title">E-mail: [ Não Logado ]</h5>
                    <a href="#" class="btn btn-primary">EDITAR PERFIL</a>
                }
            </div>
        </div>
    </section>
    <section class="eventos-publicados container text-center">
        <h1>Eventos Publicados</h1>
       <div class="row row-cols-2">
        
        @if (Model.events != null)
        {
            foreach(var item in Model.events)
             {
                    <div class="card-completo">
                    <i class="icon-remove fa-solid fa-trash-can"></i>
                    <div class="card custom-card border-secondary" style="width: 18rem">
                        <img src="@item.Photo" class="card-img-top" alt="Imagem do perfil do usuário"/>
                    </div>
                    <a class="btn btn-primary" asp-controller="Events" asp-action="Edit" asp-route-id="@Model.userData.ID">EDITAR</a>
                    </div>
            }
        }
        

           

            
       </div>
    </section>

    <section class="eventos-publicados container text-center">
        <h1>Eventos que você curtiu</h1>
        <div class="row row-cols-2">
        @if(Model.likes != null)
        {
            foreach (var item in Model.likes)
            {
                <div class="card-completo">
                    <i class="icon-remove fa-solid fa-trash-can"></i>
            <div class="card custom-card border-secondary" style="width: 18rem">
                    <img src="@item.Event.Photo" class="card-img-top" alt="Imagem do perfil do usuário" />
                </div>
                <a class="btn btn-primary ">EDITAR</a>
            </div>
            }
        }
            
        </div>
    </section>

    <script src="https://kit.fontawesome.com/9e6a074965.js" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}